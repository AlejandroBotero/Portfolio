@{
    ViewData["Title"] = "Privacy Policy";
}
@model newmvc.Models.ViewModels.ProductViewModel


<div class="container d-flex flex-row">
@* <img src="@Model.ImagePath" alt="ProductImg" class="img max-width-50vw"> *@
<img src="@Url.Content(@Model.ImagePath)" alt="ProductImg" class="img-fluid me-3" style="max-width: 50vw;" />

<div class="d-flex flex-column justify-content-center align-items-center">

    <form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImagePath" />
    <input type="hidden" asp-for="ImageType" />
    

    <label>Name</label>
    <input type="text" asp-for="Name" placeholder="Name" required/>
    <label>Price</label>
    <input type="number" asp-for="Price" step=100 placeholder="Price"/>
    <label>Description</label>
    <input type="text-area" asp-for="Description" placeholder="Description" />

    <label>Image</label>
    <input type="file" asp-for="ImageFile" placeholder="Image" />

    <label for="Submit">Keep</label>
    <input type="submit"/>

    <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">Delete</a>
    </form>
    </div>
</div>